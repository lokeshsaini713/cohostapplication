                                <div class="mb-4 col-md-6">
                                    <div class="ContactUsInfo_RequiredFld__A09NJ form-floating">
                                        <input type="tel"
                                               class="border-bottom rounded-0 form-control"
                                               id="phoneNumber"
                                               name="phoneNumber"
                                               placeholder="Phone Number"
                                               required />
                                        <label for="phoneNumber">Phone Number </label>
                                    </div>
