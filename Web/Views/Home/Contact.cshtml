                </div>

            </div>
        </div>
    </div>
</div>

  @section Scripts{
    <script src="~/sitejs/contact.js"></script>
    
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const metaTitle = "Contact Cohostweb | Web, App, Software & SEO Services";
            const metaDescription = "Contact Cohostweb to discuss web development, app development, software & SEO services. Get expert support and a free consultation today.";
            const metaKeywords = "";

            // TITLE
            document.title = metaTitle;

            // DESCRIPTION
            let descTag = document.querySelector('meta[name="description"]');
            if (!descTag) {
                descTag = document.createElement('meta');
                descTag.setAttribute('name', 'description');
                document.head.appendChild(descTag);
            }
            descTag.setAttribute('content', metaDescription);

            // KEYWORDS (optional)
            if (metaKeywords) {
                let keyTag = document.querySelector('meta[name="keywords"]');
                if (!keyTag) {
                    keyTag = document.createElement('meta');
                    keyTag.setAttribute('name', 'keywords');
                    document.head.appendChild(keyTag);
                }
                keyTag.setAttribute('content', metaKeywords);
            }
        });

        </script>


  }
