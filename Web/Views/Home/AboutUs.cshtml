@{
    ViewData["Title"] = "About Us";
    Layout = "_Layout";
}

<div>
    <div class="InnerBannerServices_innerBannerServicesBlock__CEpRF d-flex align-items-center">
        <div class="small-container container">
            <div>
                <h1>About Us</h1>
            </div>
        </div>
    </div>

    <div class="GlobalContent_GlobalContent__Xw5Tk bg-white sec-pad article-description">
        <div class="container">
            <span>
                <p>
                    <strong>Build, Grow, and Succeed Online with CohostWeb</strong>
                </p>

                <p>
                    CohostWeb helps you with everything you need to do business online. We build
                    websites and mobile applications that are designed to perform, engage users,
                    and support your business goals. Along with development, we help your website
                    appear in search results and ensure it looks professional and visually appealing.
                </p>

                <p>
                    Our goal is to create websites that are easy to use, secure, and fast-loading,
                    so visitors enjoy their experience and feel confident doing business with you.
                    CohostWeb focuses on helping businesses gain clients by creating strong and
                    reliable digital platforms.
                </p>

                <p>
                    We design responsive websites that look great on all devices, including mobile
                    phones, tablets, and desktop computers.
                </p>

                <p>
                    Our application development services help you build simple and user-friendly
                    mobile apps for both Android and iOS platforms.
                </p>

                <p>
                    We also provide SEO services to improve your visibility on Google search results.
                    This helps increase website traffic, generate quality leads, and grow your
                    business through better online reach.
                </p>

                <p>
                    Whether you are a startup or a small-scale business, CohostWeb offers attractive
                    hosting solutions based on your specific requirements and preferences. We are
                    committed to helping you build a strong online presence with confidence.
                </p>
            </span>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const metaTitle = "About Cohostweb | Software, Web, App & SEO Company";
            const metaDescription = "Discover Cohostweb, a leading software, web, app & SEO company delivering reliable digital solutions that help businesses grow online.";
            const metaKeywords = "";

            // TITLE
            document.title = metaTitle;

            // DESCRIPTION
            let descTag = document.querySelector('meta[name="description"]');
            if (!descTag) {
                descTag = document.createElement('meta');
                descTag.setAttribute('name', 'description');
                document.head.appendChild(descTag);
            }
            descTag.setAttribute('content', metaDescription);

            // KEYWORDS (optional)
            if (metaKeywords) {
                let keyTag = document.querySelector('meta[name="keywords"]');
                if (!keyTag) {
                    keyTag = document.createElement('meta');
                    keyTag.setAttribute('name', 'keywords');
                    document.head.appendChild(keyTag);
                }
                keyTag.setAttribute('content', metaKeywords);
            }
        });
    </script>


}