    <script>
           debugger;
        document.addEventListener("DOMContentLoaded", function () {
         
            const metaTitle = "Privacy Policy | Cohostweb";
            const metaDescription = "Review Cohostweb’s Privacy Policy to understand how we collect, use, store, and protect your personal information and data.";
            const metaKeywords = "";

            // TITLE
            document.title = metaTitle;

            // DESCRIPTION
            let descTag = document.querySelector('meta[name="description"]');
            if (!descTag) {
                descTag = document.createElement('meta');
                descTag.setAttribute('name', 'description');
                document.head.appendChild(descTag);
            }
            descTag.setAttribute('content', metaDescription);

