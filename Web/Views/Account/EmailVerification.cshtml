@using Shared.Common;
@{
    Layout = null;
    ViewData["Title"] = "Email Verification";
    var IsValidEmailVerified = ViewBag.EmailVerified;
    var type = ViewBag.type;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    @await Html.PartialAsync("_AccountPagesCSSPartial")
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title> Email Verification </title>

    <style type="text/css">
        html {
            position: relative;
            min-height: 100%;
        }


        body {
            height: 100%;
            background: #dfd7d7;
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        * {
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }

        .errorPage {
            display: flex;
            width: 100%;
            height: 100%;
            min-height: 100vh;
            align-items: center;
            justify-content: center;
            position: relative;
            z-index: 2;
        }

        .errorPage_container {
            display: block;
            width: 100%;
            max-width: 600px;
            text-align: center;
            padding: 30px;
            padding-bottom: 60px;
        }

        .errorPage h1 {
            margin-top: 10px;
            font-size: 46px;
            margin-bottom: 10px;
            color: #0e0101;
        }

        .errorPage p {
            margin-top: 10px;
            font-size: 22px;
            margin-bottom: 30px;
            color: #0e0101;
        }

        .errorPage a.btn_back {
            display: inline-block;
            padding: 15px 30px;
            text-decoration: none;
            background: #f42800;
            color: #fff;
            border-radius: 50px;
        }

            .errorPage a.btn_back:hover {
                background: #f42800;
            }

            .errorPage a.btn_back img {
                width: 16px;
                display: inline-block;
                margin-right: 10px;
                vertical-align: middle;
                margin-bottom: 1px;
            }

        .d-logo {
            display: block;
            width: 100%;
            text-align: center;
            margin-bottom: 40px;
        }

            .d-logo img {
                max-width: 310px;
            }
    </style>
</head>

<body id="page-top">
    <div class="cloud_layer">
        <div class="fog-container">
            <div class="fog-img fog-img-first"></div>
            <div class="fog-img fog-img-second"></div>
        </div>
    </div>
    @if (IsValidEmailVerified)
    {
        <div class="errorPage">
            <div class="errorPage_container">
                <div class="d-logo">
                    <img src="../assets/images/logo.png" alt="logo" />
                </div>
                <p id="message">Thank You, Your Email has been verified successfully.</p>
                @if (type != null && type == 3)
                {
                    <span>Goto</span> <a href="@Url.Action("Login", "Account")"><b>Sign In</b></a>
                }

            </div>
        </div>
    }
    else
    {
        <div class="errorPage">
            <div class="errorPage_container">
                <div class="d-logo">
                    <img src="../assets/images/logo.png" alt="logo" />
                </div>
                <p id="message">Invalid token or Url</p>
                @if (type != null && type == 3)
                {
                    <span>Goto</span>

                    <a href="@Url.Action("Login", "Account")"><b>Sign In</b></a>
                }

            </div>
        </div>
    }

    @section scripts {
        @await Html.PartialAsync("_JsScriptsPartial")
        @await Html.PartialAsync("_ValidationScriptsPartial")
        @await Html.PartialAsync("_CommonScriptsPartial")
    }
</body>
</html>
