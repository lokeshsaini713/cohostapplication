@model CaseStudy

@{
    ViewData["Title"] = "Create Case Study";
}

<h2>Create Case Study</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Short Description</label>
        <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
    </div>

    @* <div class="mb-3">
        <label class="form-label">Content</label>
        <textarea asp-for="Content" class="form-control ckeditor"></textarea>
    </div> *@

    <div class="mb-3">
        <label class="form-label">Category</label>
        <select asp-for="Category" class="form-select">
            <option value="Tech">Tech</option>
            <option value="Press">Press</option>
            <option value="CaseStudy">Case Study</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <!-- TECHNOLOGIES -->
    <div class="mb-3">
        <label class="form-label">Technologies</label>
        <div class="d-flex gap-3 flex-wrap">
            <label>
                <input type="checkbox" name="Technologies" value="Drupal" /> Drupal
            </label>
            <label>
                <input type="checkbox" name="Technologies" value=".NET" /> .NET
            </label>
            <label>
                <input type="checkbox" name="Technologies" value="React" /> React
            </label>
        </div>
    </div>

 

    <div class="mb-3 form-check">
        <input asp-for="IsActive" class="form-check-input" checked />
        <label class="form-check-label">Active</label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

</form>
