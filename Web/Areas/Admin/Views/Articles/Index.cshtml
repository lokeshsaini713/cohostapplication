@model List<Article>
@{
    ViewData["Title"] = "Articles";
}

<h2 class="mb-3">Articles</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    + Add Article
</a>



<table class="table table-bordered table-striped align-middle" id="sortableTable">
    <thead class="table-dark">
        <tr>
            <th>☰</th>
            <th>Image</th>
            <th>Title</th>
            <th>Slug (SEO URL)</th>
            <th>Category</th>
            <th>Status</th>
            <th>Published</th>
            <th width="150">Action</th>
        </tr>
    </thead>
    <tbody id="sortable">
        @foreach (var item in Model)
        {
            <tr data-id="@item.Id">
                <td class="drag-handle" style="cursor:move">☰</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" width="70" class="rounded" />
                    }
                </td>

                <td>@item.Title</td>

                <!-- SLUG EDIT -->
                <td>
                    <input type="text"
                           class="form-control slug-input"
                           value="@item.Slug" />
                    <small class="text-muted">
                        /blog/@item.Slug
                    </small>
                </td>

                <td>@item.Category</td>

                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>

                <td>@item.PublishedDate.ToString("dd MMM yyyy")</td>

                <td class="text-center">
                    <a asp-action="Edit"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-warning"
                       title="Edit">
                        <i class="bi bi-pencil-square"></i>
                    </a>

                    <button type="button"
                            class="btn btn-sm btn-outline-success save-slug"
                            title="Save Slug">
                        <i class="bi bi-check-circle"></i>
                    </button>

                    <button type="button"
                            class="btn btn-sm btn-outline-danger delete-article"
                            title="Delete">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <link rel="stylesheet"
          href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">


    <script>
        $(function () {

           $("#sortable").sortable({
                 handle: ".drag-handle",
                update: function () {

                    let order = [];

                    $("tbody tr").each(function (index) {
                        order.push({
                            id: $(this).data("id"),
                            sortOrder: index + 1
                        });
                    });

                    $.ajax({
                        url: "/Admin/Articles/UpdateSortOrder",
                        type: "POST",
                        contentType: "application/json",
                        data: JSON.stringify(order),
                        success: function () {
                            console.log("Sort order saved");
                        },
                        error: function () {
                            alert("Sorting failed");
                        }
                    });
                }
            });
                

        });

         $(document).on("click", ".save-slug", function () {

            let row = $(this).closest("tr");
            let id = row.data("id");
            let slug = row.find(".slug-input").val();

            $.ajax({
                url: "/Admin/Articles/UpdateSlug",
                type: "POST",
                data: {
                    id: id,
                    slug: slug
                },
                success: function () {
                    alert("Slug updated successfully");
                },
                error: function () {
                    alert("Failed to update slug");
                }
            });
        });
    </script>

                <script>
      
  
     
            $('.save-slug').click(function () {

                var row = $(this).closest('tr');
                var id = row.data('id');
                var slug = row.find('.slug-input').val();

                $.ajax({
                    url: '/Admin/Articles/UpdateSlug',
                    type: 'POST',
                    data: {
                        id: id,
                        slug: slug
                    },
                    success: function () {
                        alert('Slug updated successfully!');
                    },
                    error: function () {
                        alert('Error updating slug');
                    }
                });
            });

      

             $('.delete-article').click(function () {

            if (!confirm('Are you sure you want to delete this article?'))
                return;

            var row = $(this).closest('tr');
            var id = row.data('id');

            $.ajax({
                url: '/Admin/Articles/Delete',
                type: 'POST',
                data: { id: id },
                success: function () {
                    row.fadeOut(400, function () {
                        $(this).remove();
                    });
                },
                error: function () {
                    alert('Delete failed');
                }
            });
        });

          $('.slug-input').on('input', function () {
            let val = $(this).val().toLowerCase()
                .replace(/\s+/g, '-')
                .replace(/[^a-z0-9-]/g, '');
            $(this).val(val);
        });

        
    </script>

}
